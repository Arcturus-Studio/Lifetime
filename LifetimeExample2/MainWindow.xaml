<Window x:Class="SnipSnap.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lifetime Example - SnipSnap" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Background="Gray">
            <Button x:Name="ButtonStartStop" Content="Start" Width="100"/>
            <TextBox x:Name="SnipsLabel" Text="Snips: 0" Width="100"/>
            <TextBox x:Name="SnapsLabel" Text="Snaps: 0" Width="100"/>
            <TextBox x:Name="TimeLabel" Text="Time: 0.0s" Width="100"/>
        </StackPanel>
        <Canvas Grid.Row="1" x:Name="canvas" Background="White"/>
    </Grid>
</Window>
