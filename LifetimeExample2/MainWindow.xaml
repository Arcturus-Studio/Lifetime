<Window x:Class="SnipSnap.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lifetime Example - SnipSnap" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Background="Gray">
            <Button x:Name="ButtonStartStop" Content="Start" Width="100"/>
            <TextBox x:Name="TimeLabel" Text="Time: 0.0s" Width="100"/>
            <TextBox x:Name="TimeBest" Text="Best: 0.0s" Width="100"/>
        </StackPanel>
        <Rectangle Fill="LightGray" Grid.Row="1"/>
        <Rectangle x:Name="BarLoses" Fill="Red" HorizontalAlignment="Left" Grid.Row="1"/>
        <Rectangle x:Name="BarGains" Fill="Blue" HorizontalAlignment="Left" Grid.Row="1"/>
        <Rectangle x:Name="BarEnergy" Fill="Green" HorizontalAlignment="Left" Grid.Row="1"/>
        <Canvas Grid.Row="2" x:Name="canvas" Background="White"/>
    </Grid>
</Window>
